<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="id.kim.mabdalandsharia.OurProject"
    android:background="@drawable/backgroundputihpolos">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                android:layout_marginVertical="@dimen/default_indicator_margin_vertical">

                <RelativeLayout
                    android:padding="6dp"
                    android:background="@drawable/tombolchocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/op_carousel"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:fitsSystemWindows="true"
            app:fillColor="@color/colorPrimaryDark"
            app:layout_collapseMode="parallax"
            app:pageColor="#000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Information"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                android:layout_marginBottom="6dp"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/default_indicator_margin_horizontal">


                <ImageButton
                    android:id="@+id/btn_pindahkealfath"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/alfathlogo"
                    android:scaleType="fitCenter"
                    android:background="@drawable/tombolchocolate"
                    android:padding="15dp"/>

                    <ImageButton
                        android:src="@drawable/youtube"
                        android:scaleType="fitCenter"
                        android:padding="20dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/btn_pindahkeyoutube"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/tombolchocolate" />

                <ImageButton
                    android:src="@drawable/whatsapp"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_pindahkewhatsapp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/tombolchocolate" />

                <ImageButton
                    android:src="@drawable/facebook"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_pindahkefacebook"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/tombolchocolate" />

                <ImageButton
                    android:src="@drawable/instagram"
                    android:scaleType="fitCenter"
                    android:padding="20dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/btn_pindahkeinstagram"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/tombolchocolate" />
                </LinearLayout>

        </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="@string/garisbawah"
                tools:ignore="HardcodedText"
                android:textSize="20sp"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Progress"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                tools:ignore="HardcodedText" />


            <androidx.cardview.widget.CardView
                android:id="@+id/am_cardviewbawah"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                android:backgroundTint="@color/softChocolate"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/am_cardviewatas"
                tools:ignore="UnusedAttribute"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/am_alfath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                        android:layout_marginVertical="@dimen/default_indicator_margin_vertical"
                        android:text="Virtual Al Fath City"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

                    <ImageButton
                        android:id="@+id/btn_pindahkeaaavirtual"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                        android:background="@drawable/tombolblackbulat"
                        android:src="@drawable/ic_baseline_chevron_right_24"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
