<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlFathCity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/inicardviewnya"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tombolchocolate">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/default_indicator_margin_horizontal"
                android:layout_marginVertical="@dimen/default_indicator_margin_vertical">

            <TextView
                android:id="@+id/tvdetailatas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tombolchocolate"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/detail_alfath"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>